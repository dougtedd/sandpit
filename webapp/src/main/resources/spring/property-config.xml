<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd ">

    <bean id="propertiesFactory" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="propertiesArray">
            <list>
                <bean class="be.tedd.sandpit.webapp.config.PropertiesGeneratedByClass" factory-method="generateProperties"/>
            </list>
        </property>
    </bean>

    <bean name="configbean" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" depends-on="propertiesFactory">
        <property name="properties"><ref bean="propertiesFactory"></ref></property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean class="be.tedd.sandpit.webapp.config.PropertiesLoadedByClass" />

    <context:property-placeholder location="webapp.properties"/>

</beans>